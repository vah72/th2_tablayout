<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_edit_text">
    <TextView
        android:layout_width="140dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOrange"
        android:id="@+id/title_item_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="mua may tinhhhhhhhh"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:id="@+id/category_item_txt"
        app:layout_constraintTop_toBottomOf="@id/title_item_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Mua sam"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_item_txt"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/title_item_txt"
        android:text="Gia: 12000K"
        android:layout_marginHorizontal="20dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_item_txt"
        android:layout_marginEnd="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="27/02/2023"
        android:layout_marginHorizontal="20dp"
        android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>